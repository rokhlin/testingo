<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView android:text="N\N" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvQuestionNumber" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BUTTON_TEST_EVENT"
        android:id="@+id/btnSend"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/question_height"
        android:id="@+id/svQuestion"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSend"
        android:layout_below="@+id/tvQuestionNumber">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:yelp="http://schemas.android.com/apk/res-auto">

            <com.yelp.android.webimageview.WebImageView
                android:id="@+id/ivQuestion"
                android:layout_height="@dimen/foto_height"
                android:layout_width="match_parent"
                yelp:autoload="false"
                yelp:image_priority="3"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loading...."
                android:id="@+id/twQuestion"
                android:minLines="2"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="@dimen/ButtonPaddingLeft"
                android:layout_marginBottom="@dimen/marginLeft" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:id="@+id/gvItemcontanier"></GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/llItemcontanier">

                <RadioGroup
                    android:id="@+id/rGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

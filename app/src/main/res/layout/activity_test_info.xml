<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestInfoFragment"
    android:background="@drawable/ba">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        xmlns:yelp="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/card_background"
        android:descendantFocusability="afterDescendants"
        android:id="@+id/ll"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:gravity="top">

            <com.yelp.android.webimageview.WebImageView
                android:id="@+id/avatar"
                android:layout_height="@dimen/avatarHeightWidth"
                android:layout_width="@dimen/avatarHeightWidth"
                yelp:autoload="false"
                yelp:loading="@drawable/image_placeholder"
                yelp:image_priority="3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView"
                android:layout_gravity="center_vertical"
                android:textColor="#ff000000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView2"
                android:paddingLeft="15dp"
                android:textColor="#ff303030"/>
        </LinearLayout>

        <com.yelp.android.webimageview.WebImageView
            android:id="@+id/test_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            yelp:autoload="false"
            yelp:image_priority="3"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView3"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tags..."
                android:id="@+id/textView4"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/comments"
                android:id="@+id/textView6"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_testing"
            android:id="@+id/btnStartTest"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

    </LinearLayout>

</FrameLayout>
